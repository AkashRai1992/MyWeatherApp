<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_view_current_main_layout"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"


    tools:context="com.example.akki.mycustomerweatherapp.Detailed_View_Current_Weather">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:background="@color/bg_color_detail_activity"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textview_Current_weather_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"

            android:textColor="@color/text_color_detail_activity"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textview_current_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="4dp"
            android:textColor="@color/text_color_detail_activity"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_sunset_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="4dp"
            android:textColor="@color/text_color_detail_activity"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/current_weather_detail_image_view_icon"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/textview_sunrise_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:textColor="@color/text_color_detail_activity"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_wind_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:paddingTop="4dp"
            android:textColor="@color/text_color_detail_activity"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textview_sea_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:textColor="@color/text_color_detail_activity"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_grOund_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:textColor="@color/text_color_detail_activity"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:paddingTop="4dp"
            android:textColor="@color/text_color_detail_activity"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_dew_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="4dp"
            android:textColor="@color/text_color_detail_activity"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/textview_longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="4dp"
            android:textColor="@color/text_color_detail_activity"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="4dp"
            android:textColor="@color/text_color_detail_activity"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_last_updated_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:textColor="@color/text_color_detail_activity"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_forecast_weather00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_detail_activity"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_forecast_day_name_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_view_forecast_weather00"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/Bg_color_weather_icon"


                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_forecast_weather01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_detail_activity"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_forecast_day_name_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_view_forecast_weather01"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/Bg_color_weather_icon"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_forecast_weather02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_detail_activity"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_forecast_day_name_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_view_forecast_weather02"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/Bg_color_weather_icon"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_forecast_weather03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_detail_activity"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_forecast_day_name_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_view_forecast_weather03"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/Bg_color_weather_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_forecast_weather04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_detail_activity"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_forecast_day_name_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_view_forecast_weather04"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/Bg_color_weather_icon" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>